---
import { NAVIGATION, SOCIAL_LINKS, SITE } from '@config/site';
// Odstraňujeme import Package, protože již nebudeme používat ikonu
import { Linkedin, Twitter, Facebook } from 'lucide-react'; 
// Přidáváme import pro komponentu Image a Váš obrázek
import { Image } from 'astro:assets'; 
import hofi from '@assets/hofi.png';
---

<footer class="bg-slate-900 text-slate-300">
  <div class="container mx-auto px-4 py-16 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 gap-12 lg:grid-cols-4">
      <div class="lg:col-span-1 space-y-6">
        <a href="/" class="flex items-center space-x-3 group">
          <div class="flex items-center justify-center w-12 h-12 bg-white p-0.5">
            <Image 
              src={hofi} 
              alt="Logo HOFI CLEAN" 
              class="w-full h-full object-contain" 
              width={48}
              height={48}
            />
          </div>
          <span class="text-2xl font-bold text-white">
            HOFI CLEAN
          </span>
        </a>
        <p class="text-sm text-slate-400 leading-relaxed max-w-xs">
          {SITE.description}
        </p>
      </div>
    </div>

    <div class="mt-16 pt-8 border-t border-slate-800">
      <div class="flex flex-col md:flex-row items-center justify-between space-y-4 md:space-y-0">
        <p class="text-sm text-slate-400">
          &copy; {new Date().getFullYear()} {SITE.author}. All rights reserved.
        </p>
      </div>
    </div>
  </div>
</footer>