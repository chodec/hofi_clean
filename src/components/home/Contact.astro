---
import { Mail, Phone, MapPin, CheckCircle2 } from 'lucide-react';
import { Image } from 'astro:assets';
import hofiHero from '@assets/hero.jpg';
---

<section class="py-24 bg-linear-to-b from-slate-50 to-white">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-slate-900 mb-6">
        Kontaktujte <span class="text-transparent bg-clip-text bg-linear-to-r from-blue-600 to-teal-600">nás</span>
      </h2>
      <p class="text-xl text-slate-600 max-w-3xl mx-auto leading-relaxed">
        Neváhejte nás kontaktovat pro nezávaznou nabídku. Jsme připraveni vyřešit vaše individuální potřeby a najít nejlepší řešení pro váš prostor.
      </p>
    </div>

    <div class="max-w-5xl mx-auto bg-white rounded-3xl shadow-xl overflow-hidden border border-slate-100 transition-all hover:shadow-2xl">
      <div class="flex flex-col md:flex-row">
        
        <div class="md:w-1/2 relative min-h-[400px]">
          <Image 
            src={hofiHero} 
            alt="Úklidové služby HOFI CLEAN" 
            class="absolute inset-0 w-full h-full object-cover"
          />
          <div class="absolute inset-0 bg-linear-to-t from-slate-900/60 to-transparent flex items-end p-10">
            <div class="flex items-center space-x-3 text-white">
               <div class="bg-teal-500 rounded-full p-1">
                 <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                   <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7" />
                 </svg>
               </div>
               <span class="font-semibold tracking-wide uppercase text-sm">Rychlá domluva garantována</span>
            </div>
          </div>
        </div>

        <div class="md:w-1/2 p-10 lg:p-14 flex flex-col justify-center bg-white">
          <div class="space-y-10">
            
            <div class="group flex items-start space-x-5">
              <div class="w-12 h-12 rounded-xl bg-linear-to-br from-blue-500 to-blue-600 flex items-center justify-center text-white shadow-md group-hover:scale-110 transition-transform">
                <Phone size={22} />
              </div>
              <div class="flex flex-col">
                <span class="text-xs font-bold uppercase text-slate-400 tracking-widest mb-2">Zavolejte nám</span>
                <a href="tel:+420123456789" class="text-xl font-bold text-slate-900 hover:text-blue-600 transition-colors">+420 721 133 530</a>
                <a href="tel:+420987654321" class="text-xl font-bold text-slate-900 hover:text-blue-600 transition-colors">+420 987 654 321</a>
              </div>
            </div>

            <div class="group flex items-start space-x-5">
              <div class="w-12 h-12 rounded-xl bg-linear-to-br from-teal-500 to-teal-600 flex items-center justify-center text-white shadow-md group-hover:scale-110 transition-transform">
                <Mail size={22} />
              </div>
              <div class="flex flex-col">
                <span class="text-xs font-bold uppercase text-slate-400 tracking-widest mb-2">Napište nám</span>
                <a href="mailto:info@hoficlean.cz" class="text-xl font-bold text-slate-900 hover:text-teal-600 transition-colors border-b-2 border-transparent hover:border-teal-100">info@hoficlean.cz</a>
                <a href="mailto:hrusova@hofi-clean.cz" class="text-xl font-bold text-slate-900 hover:text-teal-600 transition-colors border-b-2 border-transparent hover:border-teal-100">hrusova@hofi-clean.cz</a>
                <a href="mailto:horvatova@hofi-clean.cz" class="text-xl font-bold text-slate-900 hover:text-teal-600 transition-colors border-b-2 border-transparent hover:border-teal-100">horvatova@hofi-clean.cz</a>
              </div>
            </div>

          </div>
        </div>

      </div>
    </div>
  </div>
</section>