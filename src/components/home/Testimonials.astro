---
import TestimonialCard from '../ui/TestimonialCard.astro';

// Ponechávám původní importy, které následně nahradíte logy firem
import testimonial1Img from '@assets/prodomia.jpg';
import testimonial2Img from '@assets/carbody.jpg';

// Nová datová struktura s názvy firem místo konkrétních jmen a rolí
const testimonials = [
  {
    quote: "Služby od HOFI CLEAN nám zásadně usnadnily provoz kancelářských prostor. Jsou neuvěřitelně spolehliví, pečliví a vždy flexibilní, když potřebujeme úklid mimo standardní dobu. Vřele doporučujeme!",
    name: "PRODOMIA s.r.o.", // Původní jméno nahrazeno názvem firmy
    role: "— Kancelářské prostory, Praha", // Původní role nahrazena popisem
    image: testimonial1Img,
    ringColor: "ring-blue-200"
  },
  {
    quote: "Pravidelný úklid výrobní haly je klíčový. HOFI CLEAN zvládá specifické požadavky našeho průmyslového prostředí s profesionálním přístupem a bez kompromisů. Výsledek je vždy perfektní.",
    name: "CARBODY a.s.", // Původní jméno nahrazeno názvem firmy
    role: "— Průmyslový úklid, Hostivař",
    image: testimonial2Img,
    ringColor: "ring-teal-200"
  }
];
---

<section class="py-24 bg-slate-900"> 
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-white mb-6">
        Důvěra <span class="text-transparent bg-clip-text bg-linear-to-r from-blue-400 to-teal-400">prověřená klienty</span>
      </h2>
      <p class="text-xl text-slate-400 max-w-3xl mx-auto leading-relaxed">
        Přečtěte si, jak náš profesionální přístup pomáhá našim klientům udržet dokonalou čistotu jejich prostor.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 gap-8">
      {testimonials.map((testimonial) => (
        <TestimonialCard testimonial={testimonial} variant="home" />
      ))}
    </div>
  </div>
</section>