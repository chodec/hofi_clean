---
import { Image } from 'astro:assets';

interface Props {
  testimonial: {
    quote: string;
    name: string;
    role: string;
    image: ImageMetadata;
    ringColor: string;
  };
  variant?: 'default' | 'home';
}

const { testimonial, variant = 'default' } = Astro.props;

// Style variants - přidáno items-center pro vertikální osu
const cardClasses = variant === 'home' 
  ? "bg-slate-50 rounded-2xl p-8 shadow-lg hover:shadow-xl transition-shadow flex flex-col items-center h-full"
  : "bg-white rounded-2xl p-8 shadow-lg hover:shadow-2xl transition-all duration-300 border border-gray-100 flex flex-col items-center h-full";

// Přidáno text-center pro text
const quoteClasses = variant === 'home'
  ? "text-slate-700 mb-8 leading-relaxed flex-1 text-lg text-center"
  : "text-gray-700 mb-8 leading-relaxed flex-1 text-lg text-center";

const nameClasses = variant === 'home'
  ? "font-semibold text-slate-900 text-center"
  : "font-semibold text-gray-900 text-center";

const roleClasses = variant === 'home'
  ? "text-sm text-slate-600 text-center"
  : "text-sm text-gray-600 text-center";
---

<div class={cardClasses}>
  <p class={quoteClasses}>
    {testimonial.quote} 
  </p>

  <div class="flex flex-col items-center mt-auto">
    <div class={`w-16 h-16 rounded-full overflow-hidden mb-4 ring-2 ${testimonial.ringColor}`}>
      <Image 
        src={testimonial.image}
        alt={testimonial.name}
        class="w-full h-full object-cover"
        width={64}
        height={64}
      />
    </div>
    <div class="flex flex-col items-center">
      <div class={nameClasses}>{testimonial.name}</div>
      <div class={roleClasses}>{testimonial.role}</div>
    </div>
  </div>
</div>